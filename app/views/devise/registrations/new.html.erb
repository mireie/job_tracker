<div class="row justify-content-center">
  <div class="col-auto">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row g-3">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="col-6">
          <div class="form-floating">
            <%= f.text_field :first_name, class: 'form-control', autocomplete: "email" %>
            <%= f.label :first_name, class: "form-label" %><br />
          </div>
        </div>
        <div class="col-6">
          <div class="form-floating">
            <%= f.text_field :last_name, class: "form-control" %>
            <%= f.label :last_name, class: "form-label" %><br />
          </div>
        </div>
        <div class="form-floating">
          <%= f.email_field :email, class: "form-control" %>
          <%= f.label :email, class: "form-label" %><br />
        </div>
        <div class="col-6">
          <div class="form-floating">
            <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
        </div>
        <div class="col-6">
          <div class="form-floating">
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
            <%= f.label :password_confirmation, class: "form-label" %><br />
          </div>
        </div>
        <div class="actions text-center d-grid mt-3">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg"%>
        </div>
      <% end %>
    </div>
      <div class="mt-3"><%= render "devise/shared/links" %></div>
  </div>
</div>
